---
import type {Language} from "../models/Translatable";
import {heroStrings} from "../data/heroStrings";
import RoundedGreenHouseLogo from "../assets/RoundedGreenHouseLogo.astro";

interface Props {
  id: string;
  language: Language;
}

const {id, language} = Astro.props;
const { title, subtitle, description } = heroStrings[language];
---
<section id={id} class="flex justify-center items-center min-h-screen bg-light p-12 pt-32">
  <div class="grid grid-cols-1 lg:grid-cols-2 place-items-center max-w-screen-xl">
    <div>
      <h2 class="text-center lg:text-left text-5xl md:text-6xl lg:text-8xl font-bold mb-6">{title}</h2>
      <div class="flex justify-center lg:hidden mb-6">
        <RoundedGreenHouseLogo classNames="h-64 w-64 md:h-72 md:w-72 lg:h-96 lg:w-96" />
      </div>
      <h3 class="text-center lg:text-left text-xl text-secondary font-bold italic mb-3">{subtitle}</h3>
      <p class="text-center lg:text-left">{description}</p>
    </div>
    <div class="hidden lg:block">
      <RoundedGreenHouseLogo classNames="h-96 w-96" />
    </div>
  </div>
</section>